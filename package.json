{
  "name": "hello-expense-tracker",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
    "googleapis": "^39.2.0",
    "jsonschema": "^1.2.4",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "2.1.8"
  },
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "react-scripts build",
    "build:server": "tsc --project tsconfig.server.json",
    "client": "PORT=${PORT:-$CLIENT_PORT} react-scripts start",
    "dev": "SERVER_PORT=8001 CLIENT_PORT=8000 concurrently -n client,server -i --default-input-target server -c green,blue --kill-others-on-fail \"npm run client\" \"npm run server\"",
    "eject": "react-scripts eject",
    "server": "PORT=${PORT:-$SERVER_PORT} nodemon --watch server --watch shared --ext ts --exec 'npm run build:server && NODE_ENV=development npm start'",
    "start": "node .build/server/index.js",
    "test": "react-scripts test"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "proxy": "http://localhost:8000/",
  "devDependencies": {
    "@types/classnames": "^2.2.8",
    "@types/express": "^4.16.1",
    "@types/gapi": "0.0.36",
    "@types/gapi.auth2": "0.0.50",
    "@types/jest": "^24.0.5",
    "@types/node": "^11.13.4",
    "@types/react": "^16.8.2",
    "@types/react-dom": "^16.8.0",
    "concurrently": "^4.1.0",
    "http-proxy-middleware": "^0.19.1",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1",
    "nodemon": "^1.18.11",
    "ts-node": "^8.1.0",
    "typescript": "^3.3.1"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.{js,ts,tsx}": [
        "prettier --write",
        "git add"
      ],
      "**/*.css": [
        "prettier --write",
        "git add"
      ],
      "**/*.{json,md}": [
        "prettier --write",
        "git add"
      ]
    }
  }
}
